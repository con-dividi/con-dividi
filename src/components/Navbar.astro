---
import { Languages } from '~/utils/types';

export interface Props {
	current: number;
	language: Languages;
}
const { current, language } = Astro.props;

let list: string[][] = [
	['home', 'home'],
	['iniziative', 'events'],
];

let slugs = ['', 'events'];
---

<nav class="absolute w-full md:border-b-1 list-none">
	<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
		<div></div>
		<div class="w-full block w-auto" id="navbar-default">
			<ul
				class="flex p-0 mt-4 border border-gray-100 rounded-lg flex-row md:space-x-8 md:mt-0 border-0 dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700 list-none"
			>
				{
					list.map((e, i) => {
						let additional_css = '';
						if (i == current) {
							additional_css = ' sanslight';
						}
						return (
							<li>
								<a
									href={'/' + language + '/' + slugs[i]}
									class="sansregular block py-2 pl-3 pr-4 text-white rounded bg-transparent md:p-0"
									aria-current="page"
								>
									<h4 class={' font-thin ' + additional_css}>{e[Languages.toNum(language)]}</h4>
								</a>
							</li>
						);
					})
				}
			</ul>
		</div>
	</div>
</nav>
