---
import 'virtual:windi.css';
export interface Props {
	title: string;
}
import '../assets/style.css';
const redirect = Astro.url.href.slice(-1) != '/';
const slash_url = Astro.url.href + '/';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html class="h-full w-full">
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/font-awesome-4.7.0/css/font-awesome.min.css" />
		{redirect && <meta http-equiv="refresh" content={`0; url=${slash_url}`} />}
		<title>PoliNetwork - {title}</title>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="The online community of Politecnico di Milano brought to you by its students - School of Design"
		/>
		<meta property="fb:app_id" content="1401488693436528" />
		<meta name="apple-itunes-app" content="app-id=1477376905" />
		<meta name="twitter:image:src" content="https://polinetwork.org/img/polinetwork_meta.png" /><meta
			name="twitter:site"
			content="@poliminetwork"
		/><meta name="twitter:card" content="summary_large_image" /><meta
			name="twitter:title"
			content="PoliNetwork/polinetwork.org"
		/><meta
			name="twitter:description"
			content="The online community of Politecnico di Milano brought to you by its students - School of Design"
		/>
		<meta property="og:image" content="https://polinetwork.org/img/polinetwork_meta.png" /><meta
			property="og:image:alt"
			content="The online community of Politecnico di Milano brought to you by its students - School of Design"
		/><meta property="og:image:width" content="200" /><meta property="og:image:height" content="200" /><meta
			property="og:site_name"
			content="PoliNetwork"
		/><meta property="og:type" content="website" /><meta
			property="og:title"
			content="PoliNetwork - {{ page.title }}"
		/><meta property="og:url" content="https://polinetwork.org/" /><meta
			property="og:description"
			content="The online community of Politecnico di Milano brought to you by its students - School of Design"
		/>
	</head>
	<body>
		<slot />
	</body>
</html>
