{
  "name": "@onwidget/astrowind",
  "description": "A template to make your website using Astro + Tailwind CSS.",
  "version": "0.7.0",
  "private": true,
  "scripts": {
    "dev": "yarn optimize-images && astro dev",
    "start": "astro dev",
    "optimize-images": "node scripts/optimize-images.js",
    "build": "npm run optimize-images && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "clean": "yarn format && eslint --ext .js,.astro src",
    "format": "prettier -w .",
    "format:check": "prettier --check .",
    "lint": "eslint --ext .js,.astro src",
    "subfont": "subfont -ir --no-fallbacks --silent --root dist"
  },
  "devDependencies": {
    "@astrojs/mdx": "^0.19.1",
    "@astrojs/partytown": "^1.0.1",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/sitemap": "^1.0.0",
    "@astrolib/analytics": "^0.2.4",
    "@astrolib/seo": "^0.2.1",
    "@fontsource/inter": "^4.5.14",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^6.13.1",
    "astro-icon": "^0.8.0",
    "eslint": "^8.54.0",
    "eslint-plugin-astro": "^0.30.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "flowbite": "^1.6.5",
    "limax": "^3.0.0",
    "mdast-util-to-string": "^3.1.0",
    "prettier": "^2.8.1",
    "prettier-plugin-astro": "^0.7.0",
    "reading-time": "^1.5.0",
    "sharp": "^0.32.1",
    "subfont": "^6.12.2",
    "typescript": "^4.9.4",
    "vite-plugin-image-optimizer": "^1.1.6",
    "vite-plugin-windicss": "^1.8.8",
    "windicss": "^3.5.6",
    "yaml-schema-validator": "^1.2.3"
  },
  "engines": {
    "node": "^14.15.0 || >=16.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@astrojs/image": "^0.17.0",
    "astro": "^2.6.0",
    "tailwindcss": "^3.3.2"
  }
}
